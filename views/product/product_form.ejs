<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head.ejs') %>
  <body>
    <%- include('../partials/nav.ejs') %>
    <div class="container">
      <h1 class="page-title"><%= title %> </h1>
      <form method="POST" action="" enctype="multipart/form-data">
        <label for="name">Product Name</label>
        <input type="text" name="name" required value="<%= typeof product !==
        'undefined' ? product.name : "" %>"/>

        <label for="description">Product Description</label>
        <textarea name="description" value="<%= typeof product !==
        'undefined' ? product.description : ""%>"></textarea>

        <label for="manufacturer">Manufacturer</label>
        <input type="text" name="manufacturer" value="<%= typeof product !==
        'undefined' ? product.manufacturer : ""%>"/>

        <label for="price">Price (in CHF)</label>
        <input type="text" name="price" value="<%= typeof product !==
        'undefined' ? product.price : ""%>"/>

        <label for="category">Category</label>
        <select name="category" id="category" value="qwe">
          <% categories.forEach(category => { %>
          <option value="<%= category._id %>" <%= (typeof product !==
        'undefined' && category.name == product.category[0].name) ? "selected" : ""%>><%= category.name %></option>
          <% }) %>
        </select>

        
        <label for="link">Link to product</label>
        <input type="text" name="link" value="<%= typeof product !== 'undefined'
        ? product.link : ""%>"/>

        <div class="bottom">
            <label for="image">Add product image

              <input type="file" name="image" id="image">
            </label>
          

          <button type="submit">Submit</button>
        </div>
      </form>
    </div>
  </body>
</html>
